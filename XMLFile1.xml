<?xml version="1.0" encoding="utf-8" ?> 
<rules>
	<rule id="1" level="0" priority="0">
		<name>Auth attempt</name>
		<types>
			<type>RAW</type>
			<type>INFO</type>
		</types>
		<if>
			<and>
				<parse type="match">POST</parse>
				<parse type="match">\auth</parse>
			</and>
		</if>
	</rule>
	
	<rule id="2" level="0" priority="1">
		<name>Error</name>
		<types>
			<type>RAW</type>
			<type>ERROR</type>
		</types>
		<if>
			<and>
				<parse type="match">ERROR</parse>
			</and>
		</if>
	</rule>
	
	<rule id="3" level="1" priority="1">
		<name>bit sussy attempt</name>
		<if>
			<listen time="100" freq="3">
				<id>1</id>
			</listen>
		</if>
	</rule>
	
	<rule id="4" level="2">
		<name>More Errors</name>
		<if>
			<listen time="100" freq="5">2</listen>
		</if>
	</rule>
	
	<rule id="5" level="3">
		<name>Brute and errors</name>
		<if>
			<and>
				<listen time="1000" freq="1">3</listen>
				<id>4</id>
			</and>
		</if>
	</rule>
	
</rules>
